import React from "react";
import { Link } from "react-router-dom";
import {
  Instagram,
  Youtube,
  Music2 as Tiktok,
  Facebook,
  Twitter,
  Linkedin,
} from "lucide-react";

/**
 * Footer
 * - Matches the provided black theme layout
 * - Big left navigation, right contact + store badges
 * - Large social cards row
 * - Clean, responsive, accessible
 */
const Footer = () => {
  const PRIMARY_LINKS = [
    { label: "HOME", to: "/" },
    { label: "ADVERTISE", to: "/business-benefits" },
    { label: "CASES", to: "/blogs-news" },
    { label: "CAREERS", to: "/blogs-news" }, // map to your careers route when ready
    { label: "APP", to: "/football-map" },
  ];

  const SOCIALS = [
    { label: "Instagram", Icon: Instagram, href: "#" },
    { label: "YouTube", Icon: Youtube, href: "#" },
    { label: "TikTok", Icon: Tiktok, href: "#" },
    { label: "Facebook", Icon: Facebook, href: "#" },
    { label: "X", Icon: Twitter, href: "#" },
    { label: "LinkedIn", Icon: Linkedin, href: "#" },
  ];

  const STORE_BADGES = [
    {
      label: "App Store",
      img: "/icons/app-store-badge.svg",
      href: "#",
    },
    {
      label: "Google Play",
      img: "/icons/google-play-badge.svg",
      href: "#",
    },
  ];

  return (
    <footer className="bg-black text-gray-200 pt-14 pb-10">
      <div className="mx-auto w-full max-w-screen-2xl px-6 md:px-10">
        {/* Top: Left big links | Right contact + store badges */}
        <div className="grid grid-cols-1 lg:grid-cols-12 gap-10 items-start">
          {/* LEFT: Primary sections */}
          <nav
            aria-label="Primary footer"
            className="lg:col-span-6 xl:col-span-7"
          >
            <ul className="space-y-5 sm:space-y-6">
              {PRIMARY_LINKS.map((item) => (
                <li key={item.label}>
                  <Link
                    to={item.to}
                    className="block font-extrabold uppercase tracking-wide text-[#cfcfcf] hover:text-white transition-colors text-[clamp(1.8rem,5vw,3.25rem)] focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-white/30 rounded"
                  >
                    {item.label}
                  </Link>
                </li>
              ))}
            </ul>
          </nav>

          {/* RIGHT: Contact + store badges */}
          <div className="lg:col-span-6 xl:col-span-5 flex w-full flex-col items-start lg:items-end gap-6">
            {/* Address + email */}
            <address className="not-italic text-sm text-gray-400 space-y-1 w-full lg:w-auto">
              <p className="leading-tight">
                Johan Huizingalaan 763A
                <br />
                1066VH Amsterdam
              </p>
              <p className="pt-2">
                <a
                  href="mailto:partnerships@by433.com"
                  className="hover:text-white focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-white/30 rounded"
                >
                  partnerships@by433.com
                </a>
              </p>
            </address>

            {/* Store badges */}
            <div className="w-full lg:w-auto">
              <p className="text-base font-semibold mb-2">Download the app</p>
              <div className="flex flex-wrap items-center gap-3">
                {STORE_BADGES.map((b) => (
                  <a
                    key={b.label}
                    href={b.href}
                    aria-label={`Get it on ${b.label}`}
                    className="inline-flex items-center gap-2 rounded-md bg-white px-3 py-2 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-white/30"
                    rel="noopener noreferrer"
                  >
                    <img
                      src={b.img}
                      alt=""
                      className="h-7 w-auto"
                      loading="lazy"
                      decoding="async"
                    />
                  </a>
                ))}
              </div>
            </div>
          </div>
        </div>

        {/* Social cards row */}
        <div className="mt-10 grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-5">
          {SOCIALS.map(({ Icon, label, href }) => (
            <a
              key={label}
              href={href}
              aria-label={label}
              className="group rounded-2xl bg-[#191919] px-6 py-10 flex items-center justify-center shadow-[inset_0_0_0_1px_rgba(255,255,255,0.06)] hover:bg-[#202020] transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-white/30"
              rel="noopener noreferrer"
            >
              <Icon
                className="h-7 w-7 sm:h-8 sm:w-8 text-gray-200 group-hover:text-white transition-colors"
                aria-hidden="true"
              />
            </a>
          ))}
        </div>

        <hr className="mt-10 border-t border-white/10" />

        {/* Bottom bar */}
        <div className="mt-6 flex flex-col md:flex-row items-start md:items-center justify-between gap-4 text-sm text-gray-400">
          <p>© {new Date().getFullYear()} – 433, B.V. | All rights reserved</p>

          <div className="flex flex-wrap items-center gap-x-5 gap-y-2">
            <a href="#" className="hover:text-white focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-white/30 rounded">
              Terms and Conditions
            </a>
            <span className="opacity-30">|</span>
            <a href="#" className="hover:text-white focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-white/30 rounded">
              433 App
            </a>
            <span className="opacity-30">|</span>
            <a href="#" className="hover:text-white focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-white/30 rounded">
              433 Services
            </a>
          </div>

          <div className="ml-auto md:ml-0">
            <img
              src="/images/logoTransparent.png"
              alt="Brand"
              className="h-7 w-auto opacity-80"
              loading="lazy"
              decoding="async"
            />
          </div>
        </div>
      </div>
    </footer>
  );
};

export default Footer;

